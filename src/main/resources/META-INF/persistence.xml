<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="inventory-jpa">

	    <jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>
	      <class>infosys.finalexam.sreid.product.Product</class>
	      <class>infosys.finalexam.sreid.customer.Customer</class>
	      <class>infosys.finalexam.sreid.order.Order</class>
	      <class>infosys.finalexam.sreid.orderdetail.OrderDetail</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="validate"/>
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="true"/>
      </properties>
	</persistence-unit>
</persistence>
